<div class="container">
    <div class="row">
        <%= form_with(model: url, local: true) do |form| %>
            <form>
                <h1>New Url</h1>
                <% if url.errors.any? %>
                    <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>
                    <ul>
                        <% url.errors.full_messages.each do |message| %>
                            <li>
                                <%= message %>
                            </li>
                            <% end %>
                    </ul>
                    <% end %>
                        <div class="form-group">
                            <label for="link">Url</label>
                            <%= form.url_field :link, id: :url_link, required: true, class: "form-control" %>
                        </div>
                        <%= form.submit :class => 'btn btn-primary' %>
            </form>
            <% end %>
    </div>
</div>