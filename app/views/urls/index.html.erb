<div class="container">
    <h2>Urls</h2>
    <p id="notice">
        <%= notice %>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Link</th>
                <th>Expiration</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @urls.each do |url| %>
                <tr class="<%= Url.expired(url) ? 'danger' : 'success'%>">
                    <td><%=url.link%></td>
                    <td><%=url.created_at + 5.minutes%></td>
                    <td>
                        <%= link_to 'Show', url, :class => 'btn btn-info' if !Url.expired(url) %>
                    </td>
                    <td>
                        <%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
</div>
<br>